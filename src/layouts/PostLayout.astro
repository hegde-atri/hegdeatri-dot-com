---
import Layout from "./Layout.astro";
const { title, description, comments, image, url, keywords } = Astro.props;
---

<Layout
    title={title}
    description={description}
    image={image}
    url={url}
    keywords={keywords}
>
    <article class="prose prose-invert mx-auto my-10">
        <h1>{title}</h1>
        <slot />
    </article>
    {
        comments && (
            <script
                src="https://utteranc.es/client.js"
                repo="hegde-atri/hegdeatri-dot-com"
                issue-term="pathname"
                theme="dark-blue"
                crossorigin="anonymous"
                async
            />
        )
    }
</Layout>
